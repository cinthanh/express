<% include particles/header %>
<h1>Add People</h1>

    <% if (errInfo != undefined) { %>
        <div style="background-color: pink; padding : 10px;">
            <ul>
                <% errInfo.forEach(function(err) { %>
                    <li><%=err.msg%></li>
                <%}) %>
            </ul>
        </div>
    <% } %>

<form action="/people/add" method="POST">
    <label for="gender">Gender</label><br>
    <input type="text" name="gender" id="gender">
    <br>
    <label for="jobs">Jobs</label><br>
    <input type="text" name="jobs" id="jobs">
    <br>
    <label for="age">Age</label><br>
    <input type="text" name="age" id="age">
    <br><br>
    <input type="submit" value="Add People">
</form>
<ul>
    <% users.forEach(function(user) { %>
        <li>User has gender: <%=user.gender%> and jobs <%=user.jobs%></li>
    <%}) %>
</ul>
<% include particles/footer %>
